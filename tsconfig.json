{
  "compilerOptions": {
    "target": "ES2020", // Or a newer ECMAScript version
    "module": "commonjs", // Or "ESNext" if you prefer ES modules
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true // If you plan to import JSON files
  },
  "include": ["src/**/*"], // Specifies which files to compile
  "exclude": ["node_modules", "dist"] // Specifies which files to exclude
}
